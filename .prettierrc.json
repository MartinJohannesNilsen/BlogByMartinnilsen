{
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.jsx"],
      "options": {
        "printWidth": 120,
        "useTabs": true,
        "arrowParens": "always",
        "tabWidth": 2,
        "semi": true
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "printWidth": 120,
        "useTabs": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true
      }
    }
  ]
}
