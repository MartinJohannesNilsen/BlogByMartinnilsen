{
  "overrides": [
    {
      "files": ["src/**/*.tsx", "src/**/*.jsx"],
      "options": {
        "printWidth": 160,
        "useTabs": true,
        "arrowParens": "avoid",
        "tabWidth": 2,
        "semi": true
      }
    },
    {
      "files": ["src/**/*.json"],
      "options": {
        "printWidth": 160,
        "useTabs": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true
      }
    }
  ]
}
